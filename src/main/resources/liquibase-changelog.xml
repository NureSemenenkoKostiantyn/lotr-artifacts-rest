<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="001-create-creator-table" author="kostiantyn">
        <createTable tableName="creator">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_creator"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="race" type="VARCHAR(255)"/>
            <column name="realm" type="VARCHAR(255)"/>
        </createTable>

        <addUniqueConstraint tableName="creator"
                             columnNames="name"
                             constraintName="uk_creator_name"/>

        <createIndex tableName="creator" indexName="idx_creator_name">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet id="002-seed-creator" author="kostiantyn">
        <insert tableName="creator">
            <column name="name" value="Sauron"/>
            <column name="race" value="Maia"/>
            <column name="realm" value="Mordor"/>
        </insert>
        <insert tableName="creator">
            <column name="name" value="Celebrimbor"/>
            <column name="race" value="Elf"/>
            <column name="realm" value="Eregion"/>
        </insert>
        <insert tableName="creator">
            <column name="name" value="Fëanor"/>
            <column name="race" value="Elf"/>
            <column name="realm" value="Valinor"/>
        </insert>
        <insert tableName="creator">
            <column name="name" value="Aulë"/>
            <column name="race" value="Vala"/>
            <column name="realm" value="Valinor"/>
        </insert>
    </changeSet>

    <changeSet id="003-create-artifact-table" author="kostiantyn">
        <createTable tableName="artifact">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_artifact"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="creator_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="origin" type="VARCHAR(255)"/>
            <column name="tags" type="VARCHAR(500)"/>
            <column name="year_created" type="INT"/>
            <column name="power_level" type="INT"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="artifact"
                baseColumnNames="creator_id"
                referencedTableName="creator"
                referencedColumnNames="id"
                constraintName="fk_artifact_creator"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>
